{
    "name": "auth-service",
    "version": "1.0.0",
    "description": "",
    "main": "server.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "dev": "ts-node-dev --respawn src/server.ts",
        "prepare": "husky",
        "build": "tsc && copyfiles -u 1 src/assets/**/* dist/src",
        "db:push": "drizzle-kit push --config=drizzle.config.ts",
        "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
        "db:studio": "drizzle-kit studio --config=drizzle.config.ts"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "packageManager": "pnpm@10.10.0",
    "dependencies": {
        "@fastify/redis": "^7.0.2",
        "dotenv": "^16.5.0",
        "drizzle-orm": "^0.43.1",
        "fastify": "^5.3.2",
        "madge": "^8.0.0",
        "pg": "^8.16.0",
        "zod": "^3.24.4"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@types/node": "^22.15.17",
        "@types/pg": "^8.15.1",
        "copyfiles": "^2.4.1",
        "drizzle-kit": "^0.31.1",
        "husky": "^9.1.7",
        "lint-staged": "^16.0.0",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.8.3"
    },
    "lint-staged": {
        "**/*.{ts,tsx}": ["biome check --apply", "biome format --write"],
        "**/*.{js,ts,json}": [
            "biome format --write",
            "madge --circular --extensions ts ."
        ]
    }
}
